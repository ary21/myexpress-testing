{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es6", "DOM"],
    "noEmit": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": ["node_modules", "test/**/*.ts"],
}